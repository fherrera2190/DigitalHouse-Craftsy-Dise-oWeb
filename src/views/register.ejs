<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body class="register">
        <%- include('./partials/header.ejs') %>
            <main class="container mb-4 d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <header class="card-header">
                            <h2 class="card-title">Registrate</h2>
                        </header>
                        <form action="POST" class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label" for="name">Nombre</label>
                                <input class="form-control" id="name" type="text" name="name">
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label" for="surname">Apellido</label>
                                <input class="form-control" id="surname" type="text" name="surname">
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label" for="email">E-mail</label>
                                <input class="form-control" id="email" type="email" name="email">
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label" for="password">Contraseña</label>
                                <input class="form-control" id="password" type="password" name="password">
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label" for="password2">Confirme su contraseña</label>
                                <input class="form-control" id="password2" type="password" name="password2">
                            </div>
                            <div class="col-12 mb-3 d-flex justify-content-end gap-3">
                                <button class="btn btn-primary" type="reset">Limpiar</button>
                                <button class="buttons buttons__primary" type="submit">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('./partials/footer.ejs') %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                    crossorigin="anonymous"></script>
    </body>

</html>